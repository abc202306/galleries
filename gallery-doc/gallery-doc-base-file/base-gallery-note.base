filters:
  and:
    - file.inFolder("gallery-notes")
    - file.ext == "md"
views:
  - type: cards
    name: Cards
    order:
      - file.name
      - gallery
      - url
    sort:
      - property: ctime
        direction: DESC
    image: note.cover
    cardSize: 100
  - type: cards
    name: CardsMicro
    order:
      - file.name
      - gallery
      - url
    sort:
      - property: ctime
        direction: DESC
    image: note.cover
    cardSize: 400
